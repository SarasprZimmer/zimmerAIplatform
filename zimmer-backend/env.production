# Zimmer Backend Production Environment Configuration
# Production environment variables for direct deployment

# Database Configuration
DATABASE_URL=postgresql+psycopg2://zimmer:zimmer@localhost:5432/zimmer

# JWT Configuration (REQUIRED - Generate a strong secret key)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Server Configuration
HOST=0.0.0.0
PORT=8000
UVICORN_WORKERS=3

# CORS Configuration
ALLOWED_ORIGINS=https://zimmerai.com,https://admin.zimmerai.com,https://api.zimmerai.com

# Production Settings
DEBUG=false
ENVIRONMENT=production
REQUIRE_VERIFIED_EMAIL_FOR_LOGIN=true

# Google OAuth Configuration (Production)
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_REDIRECT_URL=https://api.zimmerai.com/api/auth/google/callback
FRONTEND_BASE_URL=https://zimmerai.com

# Email Configuration (Production)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=no-reply@zimmerai.com
FRONTEND_VERIFY_URL=https://zimmerai.com/verify-email
EMAIL_VERIFICATION_TTL_MIN=30

# Payment Configuration (Production)
PAYMENTS_MODE=live
ZARRINPAL_MERCHANT_ID=your-production-merchant-id
ZARRINPAL_BASE_URL=https://api.zarinpal.com/pg/rest/WebGate
ZARRINPAL_CALLBACK_URL=https://api.zimmerai.com/api/payments/callback
ZARRINPAL_DESCRIPTION=Zimmer token purchase

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Security Settings
ALLOW_INSECURE_AUTH=false
ALLOW_NEGATIVE_TOKENS=false

# Service Token for External APIs
ZIMMER_SERVICE_TOKEN=your-secret-service-token-for-automation-apis
